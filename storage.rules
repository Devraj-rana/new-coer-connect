rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images
    match /profile-images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Quiz assets (images, documents)
    match /quiz-assets/{quizId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Teacher ownership checked in Firestore rules
    }
    
    // Class materials
    match /class-materials/{classId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Teacher ownership checked in Firestore rules
    }
    
    // General uploads (posts, etc.)
    match /uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

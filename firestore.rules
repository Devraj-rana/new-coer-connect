rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Allow reading other users' basic info
    }
    
    // Quizzes rules
    match /quizzes/{quizId} {
      // Teachers can create, read, update, delete their own quizzes
      allow create: if request.auth != null && 
                   request.auth.uid == resource.data.teacherId;
      allow read, write: if request.auth != null && 
                        request.auth.uid == resource.data.teacherId;
      
      // Anyone can read quizzes for taking (but not see correct answers)
      allow read: if request.auth != null || 
                     (!resource.data.settings.requireLogin && resource.data.isActive);
      
      // Students can submit quiz answers (update submissions array)
      allow update: if request.auth != null && 
                   resource.data.isActive &&
                   // Only allow updating submissions field
                   request.resource.data.diff(resource.data).affectedKeys()
                     .hasOnly(['submissions', 'updatedAt']);
    }
    
    // Classes rules
    match /classes/{classId} {
      // Teachers can create and manage their classes
      allow create, read, write: if request.auth != null && 
                                 request.auth.uid == resource.data.teacherId;
      
      // Students can read classes they're enrolled in
      allow read: if request.auth != null && 
                     request.auth.uid in resource.data.studentIds;
    }
    
    // Posts and comments (existing social features)
    match /posts/{postId} {
      allow read, write: if request.auth != null;
    }
    
    match /comments/{commentId} {
      allow read, write: if request.auth != null;
    }
  }
}
